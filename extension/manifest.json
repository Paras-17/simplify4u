{
  "manifest_version": 3,
  "name": "Summarize & Translate",
  "version": "1.0",
  "description": "Summarize and translate text with a right-click",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_icon": "logo.png"
  }
}
